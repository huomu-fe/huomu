{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node10",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src"]
  // "exclude": ["node_modules"]
}
